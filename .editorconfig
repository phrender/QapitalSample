# Is root in project?
root = true

# Rules and style for all files in the project
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 4
continuation_indent_size = 4

[*.{kt,kts}]
max_line_length=160

# ktlint
disabled_rules=parameter-list-wrapping

# Rules for IntelliJ
ij_java_use_single_class_imports = true
ij_kotlin_name_count_to_use_star_import = 99
ij_kotlin_name_count_to_use_star_import_for_members = 99
